{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.0.2",
        "area17/http-basic-auth": "1.x-dev",
        "area17/laravel-auto-head-tags": "^1.1",
        "area17/localization": "1.x-dev",
        "area17/twill": "^2.8",
        "area17/twill-transformers": "^1.1",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^9.19",
        "laravel/sanctum": "^2.14.1",
        "laravel/tinker": "^2.7"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ignition": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Twill/Capsules/Base/helpers.php",
            "app/Twill/Capsules/FeatureFlags/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan twill:update --ansi",
            "npx husky install"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "lint": [
            "sh tools/linters.sh lint"
        ],
        "format": [
            "sh tools/linters.sh format"
        ],
        "prettify": [
            "sh tools/linters.sh prettify"
        ],
        "prettier": [
            "sh tools/linters.sh prettier"
        ],
        "php-cs-fixer": [
            "sh tools/linters.sh php-cs-fixer"
        ],
        "phpstan": [
            "sh tools/linters.sh phpstan"
        ],
        "blast": [
            "sh tools/linters.sh blast"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/area17/localization"
        },
        {
            "type": "vcs",
            "url": "https://github.com/area17/http-basic-auth"
        }
    ]
}
